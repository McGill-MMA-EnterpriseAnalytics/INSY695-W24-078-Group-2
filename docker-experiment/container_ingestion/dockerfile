# Using the official Python runtime image
FROM python:3.11.8-slim

# Setting up within-container working directory
WORKDIR /app
# Copying whatever is in the current directory contents into the container at /usr/src/app
COPY . /app

# Package installation via pip using the requirements.txt file
RUN pip install --no-cache-dir -r requirements.txt

# Making port 80 the visible one for external communication
EXPOSE 80

COPY . .

# commands to be run upon container initialization
CMD ["python","merge_weather_flights.py"]

